### Sheet used to generically display the XWikiPreferences object fields in the administration sheets.
#if ("$!section" != '')
  ## clean="false" due to bug #XWIKI-4122 - the &lt;legend> element is dropped.
  {{html clean="false"}}
  &lt;form id="$section.toLowerCase()" method="post" action="$xwiki.getURL($currentDoc, 'saveandcontinue')" onsubmit="cancelCancelEdit()" class="xform half">
    #set($prefsClassName = 'XWiki.XWikiPreferences')
    #set($obj = $doc.getObject($prefsClassName))
    #foreach ($entry in $params.entrySet())
      #set ($fields = $entry.value)
      &lt;fieldset class="$entry.key">
      ## If there is only one section, don't display the legend
      #if ($params.size() > 1)
        &lt;legend>$services.localization.render("admin.$entry.key")&lt;/legend>
      #end
      #if ($fields.size() > 0)
        &lt;dl>
      #end
      #foreach($field in $fields)
        #set($prop = $obj.xWikiClass.get($field))
        #set($title = $services.localization.render($field))
        #if ($title == $field &amp;&amp; $prop)
          #set ($title = $!prop.prettyName)
        #end
        #if($services.localization.get("${obj.xWikiClass.name}_${field}"))
          #set ($title = $services.localization.render("${obj.xWikiClass.name}_${field}"))
        #end
        #set($hint = $services.localization.render("${obj.xWikiClass.name}_${field}.hint"))
        #if($hint == "${obj.xWikiClass.name}_${field}.hint") #set($hint = $NULL) #end
        &lt;dt>
        &lt;label #if($prop)for="${prefsClassName}_${obj.number}_${prop.name}"#end class="$field">$title
        #if($field == 'skin')
          #set ($skin = $xwiki.skin)
          &lt;span class="buttonwrapper">&lt;a href="$xwiki.getURL($skin)"#if ($skin.indexOf('.') &lt; 0) class="hidden"#end>$services.localization.render('admin.customize')&lt;/a>&lt;/span>
        #end
        #if($field == 'colorTheme')
          #if ($editor == 'globaladmin')
            #set ($colorThemeName = $xwiki.getXWikiPreference('colorTheme'))
          #else
            #set ($colorThemeName = $xwiki.getSpacePreference('colorTheme'))
            #set ($wikiColorTheme = $xwiki.getDocument($xwiki.getXWikiPreference('colorTheme')))
            #if (!$wikiColorTheme.isNew())
              #set ($colorThemeHint = $services.localization.render('admin.colortheme.wikiSetting', ["&lt;a href='$wikiColorTheme.getURL()'>$wikiColorTheme.plainTitle&lt;/a>"]))
            #end
          #end
          #if($xwiki.exists('ColorThemes.WebHome'))
            #set ($colorThemeHint = "$!{colorThemeHint} &lt;strong>&lt;a href=""$xwiki.getURL('ColorThemes.WebHome')"">$services.localization.render('admin.colortheme.manage')&lt;/a>&lt;/strong>")
          #end
          &lt;span class="buttonwrapper">&lt;a href="$xwiki.getURL($colorThemeName, 'inline')"#if ($colorThemeName.indexOf('.') &lt; 0) class="hidden"#end>$services.localization.render('admin.customize')&lt;/a>&lt;/span>
        #end
        &lt;/label>
        #if($hint)&lt;span class="xHint">$hint&lt;/span>#end
        &lt;/dt>
        #if ($prop)
          &lt;dd>$doc.display($prop.name, 'edit', $obj).replaceAll('(^..html.*?}})|(../html..$)', '')&lt;/dd>
          #if($field == 'colorTheme' &amp;&amp; $colorThemeHint)
            &lt;dd class="xHint">$colorThemeHint&lt;/dd>
          #end
        #end
      #end
      #if ($fields.size() > 0)
        &lt;/dl>
      #end
      &lt;/fieldset>
    #end
    &lt;div class="hidden">
      &lt;input type="hidden" name="form_token" value="$!{services.csrf.getToken()}" />
      &lt;input type="hidden" name="xcontinue" value="$xwiki.getURL($currentDoc, 'admin', "editor=${escapetool.url(${editor})}&amp;amp;section=${escapetool.url(${section})}&amp;amp;space=${escapetool.url(${currentSpace})}")" />
      &lt;input type="hidden" name="xredirect" value="$xwiki.getURL($currentDoc, 'admin', "editor=${escapetool.url(${editor})}&amp;amp;section=${escapetool.url(${section})}&amp;amp;space=${escapetool.url(${currentSpace})}")" />
      &lt;input type="hidden" name="classname" value="$prefsClassName" />
    &lt;/div>
    &lt;div class="bottombuttons">
      &lt;p class="admin-buttons">
        &lt;span class="buttonwrapper">&lt;input class="button" type="submit" name="formactionsac" value="$services.localization.render('admin.save')" />&lt;/span>
      &lt;/p>
    &lt;/div> ## bottombuttons
  &lt;/form>
  {{/html}}
#end
