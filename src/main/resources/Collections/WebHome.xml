#if("$!request.collectionName" != '' &amp;&amp; "$!request.templateReference" != '')
  #set ($collectionReference = $services.model.createDocumentReference($doc.wiki, $doc.space, $request.collectionName))
  $response.sendRedirect($xwiki.getURL($collectionReference, 'edit',
    "parent=$escapetool.url($doc.documentReference)&amp;template=$escapetool.url($request.templateReference)"))
  #stop
#end
  $services.localization.render('collections.home.create.hint')

  {{html}}
  &lt;form action="" class="xform half"&gt;
    &lt;dl>
      &lt;dt>
        &lt;label for="collectionName">$services.localization.render('collections.home.create.name')&lt;/label>
        &lt;span class="xHint">$services.localization.render('collections.home.create.name.hint')&lt;/span>
      &lt;/dt>
      &lt;dd>&lt;input type="text" name="collectionName" id="collectionName" />&lt;/dd>
      &lt;dt>
        &lt;label for="templateReference">$services.localization.render('collections.home.create.type')&lt;/label>
        &lt;span class="xHint">$services.localization.render('collections.home.create.type.hint')&lt;/span>
      &lt;/dt>
      &lt;dd>
        &lt;select name="templateReference" id="templateReference">
          #foreach ($type in $services.collection.types)
            &lt;option value="$services.collection.get($type).templateReference">
              $services.localization.render("collections.home.type.$type")
            &lt;/option>
          #end
        &lt;/select>
      &lt;/dd>
    &lt;/dl>
    &lt;p class="buttons">
      &lt;span class="buttonwrapper">
        &lt;input class="button" type="submit" value="$services.localization.render('collections.home.create')" />
      &lt;/span>
    &lt;/p>
  &lt;/form>
  {{/html}}

